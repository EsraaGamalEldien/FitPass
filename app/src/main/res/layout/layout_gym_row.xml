<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/gym_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/gym_card_view_bottom_margin"
    android:elevation="@dimen/gym_card_view_elevation"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/gym_card_view_vertical_margin"
        android:layout_marginEnd="@dimen/gym_card_view_horizontal_margin"
        android:layout_marginStart="@dimen/gym_card_view_horizontal_margin"
        android:layout_marginTop="@dimen/gym_card_view_vertical_margin">

        <ImageView
            android:id="@+id/gym_image_imageView"
            android:layout_width="@dimen/gym_image_imageView_width"
            android:layout_height="@dimen/gym_image_imageView_height"
            android:layout_marginEnd="@dimen/gym_image_imageView_end_margin"
            android:contentDescription="@string/gym_image"
            android:transitionName="@string/photo_shared_element" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/gym_image_imageView"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gym_title_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/gym_title_textView_bottom_margin"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/gym_location_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />

        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
