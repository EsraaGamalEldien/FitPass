<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/class_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/class_card_view_bottom_margin">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/class_card_view_elevation"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/class_card_view_vertical_margin"
            android:layout_marginTop="@dimen/class_card_view_vertical_margin"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/gym_image_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/gym_image_layout_end_margin"
                android:layout_marginStart="@dimen/gym_image_layout_start_margin"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/class_startTime_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/class_startTime_textView_bottom_margin"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="start time" />

                <TextView
                    android:id="@+id/class_duration_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    tools:text="duration" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/class_details_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/class_details_layout_end_margin"
                android:layout_weight="1"
                android:orientation="vertical"
                android:textColor="@color/black">

                <TextView
                    android:id="@+id/class_title_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/class_title_textView_bottom_margin"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    tools:text="title" />

                <TextView
                    android:id="@+id/class_category_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/class_category_textView_bottom_margin"
                    android:textColor="@color/black"
                    tools:text="category" />

                <TextView
                    android:id="@+id/class_location_textView"
                    android:layout_width="@dimen/class_location_textView_width"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    tools:text="location" />
            </LinearLayout>

            <ImageView
                android:id="@+id/class_icon_imageView"
                android:layout_width="@dimen/class_icon_imageView_width"
                android:layout_height="@dimen/class_icon_imageView_height"
                android:layout_gravity="end|center_vertical"
                android:layout_marginEnd="@dimen/class_icon_imageView_end_margin"
                android:layout_weight="1"
                android:contentDescription="@string/class_icon" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
