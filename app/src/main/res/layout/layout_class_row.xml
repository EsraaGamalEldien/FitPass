<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/class_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:elevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/class_startTime_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="10dp"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/class_duration_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/class_startTime_textView"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="10dp" />

        <TextView
            android:id="@+id/class_title_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/class_startTime_textView"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/class_category_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/class_title_textView"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/class_startTime_textView" />

        <TextView
            android:id="@+id/class_location_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/class_category_textView"
            android:layout_marginEnd="20dp"
            android:layout_toEndOf="@id/class_startTime_textView" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
